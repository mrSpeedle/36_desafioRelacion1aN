<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td><%= client.movies.last %></td>
    <% if defined?(show_links) && show_links %>
      <td class="d-flex justify-content-around">
        <%= link_to "Show this client", client, class: "btn btn-primary custom-button" %>
        <%= link_to "Edit this client", edit_client_path(client), class: "btn btn-secondary" %>
        <%= button_to "Destroy this client", confirm_destroy_client_path(client), method: :get, class: "btn btn-danger" %>

      </td>
    <% end %>
  </tr>
</div>
